{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@utils": ["src/lib/utils"],
            "@labels": ["src/labels"],
            "@constants": ["src/constants"],
            "@templates": ["src/lib/templates"],
            "@languageServer/*": ["src/lib/languageServer/*"],
            "@actionProviders/*": ["src/lib/actionProviders/*"],
            "@testutils": ["test/utils"]
        }
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
